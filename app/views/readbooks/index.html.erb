<p id="notice"><%= notice %></p>

<h1>Readbooks</h1>

<% if user_signed_in? %>
        <div class="user_nav grid-6">
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
          <%= link_to '投稿する', new_readbook_path %>
        </div>
      <% else %>
        <div class="grid-6">
          <%= link_to "ログイン", new_user_session_path, class: 'post' %>
          <%= link_to "新規登録", new_user_registration_path, class: 'post' %>
        </div>
      <% end %>

<table>
  <thead>
    <tr>
      <th>title</th>
      <th>author</th>
      <th>review</th>
      <th>image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @readbooks.each do |readbook| %>
      <tr>
        <td><%= readbook.title %></td>
        <td><%= readbook.author %></td>
        <td><%= readbook.review %></td>
        <td><%= readbook.image %></td>
        <td><%= link_to 'Show', readbook %></td>
        <td><%= link_to 'Edit', edit_readbook_path(readbook) %></td>
        <td><%= link_to 'Destroy', readbook, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate(@readbooks) %>
<br>